<div class="jumbotron text-center">
    <h1>Editando
        <%= cadastro.user %>
    </h1>
</div>

<div class="row">
    <div class="col-sm-12 col-sm-offset-3">

        <form action="/cadastros/<%= cadastro.user %>" method="POST">

            <div class="form-group">
                <label>Nome</label>
                <input type="text" name="firstname" class="form-control" value="<%= cadastro.firstname %>" required>
            </div>

            <div class="form-group">
                <label>Sobrenome</label>
                <input type="text" name="lastname" class="form-control" value="<%= cadastro.lastname %>" required>
            </div>

            <div class="form-group">
                <label>Usu√°rio</label>
                <input type="text" name="user" class="form-control" value="<%= cadastro.user %>" required>
            </div>

            <div class="form-group">
                <label>E-mail</label>
                <input type="email" name="email" class="form-control" value="<%= cadastro.email %>" required>
            </div>

            <div class="form-group">
                <label>Senha</label>
                <input type="password" name="password" class="form-control" value="<%= cadastro.password %>" required>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg">Atualizar</button>
            </div>

        </form>

    </div>
</div>